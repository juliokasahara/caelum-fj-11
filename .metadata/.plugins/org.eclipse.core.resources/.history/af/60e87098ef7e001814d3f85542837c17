package Model;

public class Casa {
	private String cor;
	private static boolean porta1;
	private boolean porta2;
	private boolean porta3;
	
	
	public static int QuantasPortasEstaoAbertas(){
		int quantidade ;
		
		if(isPorta1() == true){
			quantidade ++;
		}
		
		return quantidade;
		
	}
	
	public static void Abre(int numPorta){
		if(numPorta == 1){
			setPorta1(true);
		}
	}
	
	
	public String getCor() {
		return cor;
	}
	public void setCor(String cor) {
		this.cor = cor;
	}
	public boolean isPorta1() {
		return porta1;
	}
	public static void setPorta1(boolean porta) {
		porta1 = porta;
	}
	public boolean isPorta2() {
		return porta2;
	}
	public void setPorta2(boolean porta2) {
		this.porta2 = porta2;
	}
	public boolean isPorta3() {
		return porta3;
	}
	public void setPorta3(boolean porta3) {
		this.porta3 = porta3;
	}
}
